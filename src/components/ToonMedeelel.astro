---
import "../styles/global.css";
import { twMerge } from "tailwind-merge";

import axios from "axios";
const response = await axios.get(
  "http://west.edu.mn:3000/api/v1/settings/toonmedee"
);
const stats = response.data;
---

<section class="bg-blue-900 py-10 text-white">
  <div class="container mx-auto text-center">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Оюутан -->
      <div class="flex flex-col items-center">
        <div class="relative">
          <div
            class="w-28 h-28 rounded-full border-8 border-yellow-400 flex items-center justify-center relative"
          >
            <div
              class="absolute inset-0 m-2 border-4 border-white rounded-full"
            >
            </div>
            <span class="text-2xl font-bold text-yellow-400 relative z-10"
              >{stats.oyutan}</span
            >
          </div>
        </div>
        <h2 class="mt-4 text-lg font-semibold">ОЮУТАН</h2>
        <p class="text-sm">Суралцаж буй оюутны тоо</p>
      </div>

      <!-- Багш, ажилчид -->
      <div class="flex flex-col items-center">
        <div class="relative">
          <div
            class="w-28 h-28 rounded-full border-8 border-yellow-400 flex items-center justify-center relative"
          >
            <div
              class="absolute inset-0 m-2 border-4 border-white rounded-full"
            >
            </div>
            <span class="text-2xl font-bold text-yellow-400 relative z-10"
              >{stats.bagshAjilchid}</span
            >
          </div>
        </div>
        <h2 class="mt-4 text-lg font-semibold">БАГШ</h2>
        <p class="text-sm">Профессор багш нарын тоо</p>
      </div>

      <!-- Тэнхим -->
      <div class="flex flex-col items-center">
        <div class="relative">
          <div
            class="w-28 h-28 rounded-full border-8 border-yellow-400 flex items-center justify-center relative"
          >
            <div
              class="absolute inset-0 m-2 border-4 border-white rounded-full"
            >
            </div>
            <span class="text-2xl font-bold text-yellow-400 relative z-10"
              >{stats.tenhim}</span
            >
          </div>
        </div>
        <h2 class="mt-4 text-lg font-semibold">САЛБАР, ТЭНХИМ</h2>
        <p class="text-sm">Салбар тэнхимийн тоо</p>
      </div>
    </div>
  </div>
</section>
